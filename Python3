n = int(input("Integer n: \n"))
option = int(input("Choose an option: 0- Factors, 1-Factorial, 2-Sigma\n"))

if option==0:
    for i in range(n):
        if n%i==0:
            print i
elif option==1:
    result = 1
    for i in range(1,n+1):
        result = result*i
    print result
elif option==2:
    result = n*(n+1)/2
    print result

        

